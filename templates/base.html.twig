<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
          content="Site web pour le recensement de vos guitares et basses pour maintenir votre collection à jour. Pour collectionneurs chevronnés et amateurs.">
    <meta name="robots" content=" follow"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset("css/homeStyle.css") }}">
    <link rel="stylesheet" href="{{ asset("css/collectionStyle.css") }}">
    <link rel="stylesheet" href="{{ asset("css/form.css") }}">
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
    <title>{% block title %}{% endblock %}Guitar Collection</title>
</head>

<body {{ stimulus_controller('symfony/ux-swup/swup') }}>
<header class="header">
    <nav>
        <div class="logo">
            <a href="{{ path("home_Page") }}">
                <img src="{{ asset("images/Guitar.svg") }}" alt="Logo Guitar Collection" width="20%">
            </a>
        </div>
        <ul class="nav-links">
            <li class="nav-li nav-slide-line">
                <a class="slide-line" href="{{ path("home_Page") }}">Accueil</a>
            </li>
            <li class="nav-li nav-slide-line">
                <a href="{{ path("home_aboutPage") }}">A propos</a>
            </li>
            <li class="nav-li nav-slide-line">
                <a href="{{ path("post_page") }}">Posts</a>
            </li>
            <li class="nav-li nav-slide-line">
                <a href="{{ path("collection_page") }}">Collection</a>
            </li>
            <li class="nav-li nav-slide-line">
                <a href="{{ path("contact") }}">Contact</a>
            </li>

            {% if app.user %}
                <li class="nav-li">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-person-circle" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                        <path fill-rule="evenodd"
                              d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                    </svg>
                    <span class="dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
                          aria-expanded="false">
                                                {{ app.user.pseudo }}
                                        </span>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        {% if is_granted("ROLE_ADMIN") %}
                            <li><a class="dropdown-item" href="{{ path("back_office_collection_browse") }}">Liste des guitares</a></li>
                            <li><a class="dropdown-item" href="{{ path("back_office_brand_browse") }}">Liste des marques</a></li>
                            <li><a class="dropdown-item" href="{{ path("back_office_user_browse") }}">Liste des utilisateurs</a></li>
                            <li><a class="dropdown-item" href="{{ path("back_office_category_browse") }}">Liste des catégories</a></li>
                            <li><a class="dropdown-item" href="{{ path("back_office_post_browse") }}">Liste desposts</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                        {% endif %}

                        <li><a class="dropdown-item" href="{{ path("back_office_collection_browse") }}">Instruments</a></li>
                        <li><a class="dropdown-item" href="{{ path("profile") }}">Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="{{ path("app_logout") }}">Se déconnecter</a></li>
                    </ul>
                    </div>
                </li>
            {% else %}
                <li class="nav-li nav-slide-line">
                    <a class="btn btn-outline-warning border rounded-pill" style="Margin-top: -0.2rem"
                       href="{{ path("app_login") }}">Connection</a>
                </li>

            {% endif %}
        </ul>

        <div class="nav-burger ">
            <div class="line1"></div>
            <div class="line2"></div>
            <div class="line3"></div>
        </div>
    </nav>

</header>
<main id="swup">
    {% block body %}{% endblock %}
</main>
<footer>
    <div class="container">
        <div class="row mb-2">
            <div class="col-md-4">
                <h3>Voir les collections</h3>
                <ul class="nav-links-footer px-0">
                    <li><a href="{{ path("brand_page") }}">Marques</a></li>
                    <li><a href="">Nouveautés</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h3>Nous contacter</h3>
                <ul class="nav-links-footer px-0">
                    <li><a href="">FAQ concernant nos services</a></li>
                    <li><a href="">Espace utilisateur</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h3>Entreprise</h3>
                <ul class="nav-links-footer px-0">
                    <li><a href="">À propos de Guitar Collection</a></li>
                    <li><a href="">Emplois</a></li>
                    <li><a href="">Press</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 d-flex justify-content-between">
                <p class="copyright">Copyright &copy; Guitar Collection</p>
                <p class="copyright">Powered by Newdevcreator</p>

            </div>
        </div>
    </div>

</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
<script src="{{ asset("js/homeScript.js") }}"></script>


</body>

</html>
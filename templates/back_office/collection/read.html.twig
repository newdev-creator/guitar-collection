{% extends 'base.html.twig' %}

{% block title %}Guitar{% endblock %}

{% block body %}
    <h1>Guitar</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ guitar.id }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ guitar.model }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ guitar.year }}</td>
            </tr>
            <tr>
                <th>AcquisitionAt</th>
                <td>{{ guitar.acquisitionAt ? guitar.acquisitionAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Wear</th>
                <td>{{ guitar.wear }}</td>
            </tr>
            <tr>
                <th>Finition</th>
                <td>{{ guitar.finition }}</td>
            </tr>
            <tr>
                <th>Pickups</th>
                <td>{{ guitar.pickups }}</td>
            </tr>
            <tr>
                <th>NeckMaterial</th>
                <td>{{ guitar.neckMaterial }}</td>
            </tr>
            <tr>
                <th>BodyMaterial</th>
                <td>{{ guitar.bodyMaterial }}</td>
            </tr>
            <tr>
                <th>BodyForm</th>
                <td>{{ guitar.bodyForm }}</td>
            </tr>
            <tr>
                <th>DominationHand</th>
                <td>{{ guitar.dominationHand ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>NbFrets</th>
                <td>{{ guitar.nbFrets }}</td>
            </tr>
            <tr>
                <th>Fixation</th>
                <td>{{ guitar.fixation ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ guitar.image }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ guitar.createdAt ? guitar.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ guitar.updatedAt ? guitar.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_office_collection_browse') }}">back to list</a>

    <a href="{{ path('back_office_collection_edit', {'id': guitar.id}) }}">edit</a>

    {{ include('back_office/collection/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}
{% block title %}Contactez nous - {% endblock %}
{% block body %}
    <div class="container font-family">

        <div class="container-login d-flex justify-content-center align-items-center flex-column">
            <form class="form-login" method="post">
                <h5 class="h3 mb-3 font-weight-normal text-center ">Prendre contact avec nous</h5>
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.email) }}
                {{ form_row(form.message) }}
                <button class="btn-login btn-warning" type="submit">
                    Envoyer
                </button>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<main>
    <h1 class="text-center collection-title">Collection</h1>

    <div class="container">
        <div class="row">
            {% for guitar in collection_page %}
            <div class="col-md-3">
                <div class="card collection-card">
                    <a href="{{ path("collection_show", {"id": guitar.id}) }}">
                        <img class="collection-image" src="{{ guitar.image }}" alt="{{ guitar.name }}">
                        <h2 class="text-center">{{ guitar.name }}</h2>
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</main>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<main>
    <h1 class="text-center collection-title">Collection</h1>

    <div class="container font-family">
        <p><a class="link-dark" href="{{ path("home_Page") }}">Accueil</a>
            >
            <a class="link-dark" href="{{ path("collection_page") }}">Collection </a>
            >
        </p>

        <h3>Trier par categories:</h3>
        {% for brand in brands %}
        <a href="{{ path("brand_show", {"id": brand.id}) }}"><button type="button" class="btn btn-outline-primary mb-3">{{ brand.name }}</button></a>
        {% endfor %}
        <div class="row">
            {% for guitar in collection_page %}
            <div class="col-md-3">
                <div class="card collection-card">
                    <a href="{{ path("collection_show", {"id": guitar.id}) }}">
                        <img class="collection-image" src="{{ guitar.image }}" alt="{{ guitar.model }} guitar">
                        <h3 class="text-center">{{ guitar.model }}</h3>
                        <p class="text-center">{{ guitar.brand.name }}</p>
                    </a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</main>
{% endblock %}
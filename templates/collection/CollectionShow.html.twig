{% extends 'base.html.twig' %}

{% block title %}Hello CollectionController!{% endblock %}

{% block body %}
<main>
  <h1 class="text-center collection-title">{{ brand.name }} {{ aesthetic.model }}</h1>
  <div class="container pb-5">
    <div class="row">


      <div class="col-md-6">
        <img 
          class="collection-image"
          src="{{ collection_show.image }}"
          alt="{{ brand.name }} {{ collection_show.name }}">
      </div>

      <div class="col-md-6">
        <h2>{{ aesthetic.wear }}</h2>
      </div>


    </div>
  </div>
</main>
{% endblock %}